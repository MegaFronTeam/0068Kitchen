mixin sFamiliar(data)
	// start sFamiliar
	+b.SECTION.sFamiliar--js.section(class=`${data.addClasses || ''}`)#sFamiliar&attributes(attributes)
		if data.bg
			+e.bg
				img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
		if data.bgAlt
			+e.bg--alt
				img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
		+e.container.container
			if !data.absoluteTitle
				+e.row.row.align-items-center.align-items-xxl-start
					.col
						+b.section-title
							h2!=data.title
					+e.arrow-col.col-auto
						+arrow2()
			else
				+e.a-title
					//-+e.bg
						img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
					+e.row--absolute.row.align-items-center.align-items-xxl-start
						.col.col-xl-8
							+b.section-title
								h2!=data.title
						+e.arrow-col.col-auto.col-xl-12
							+arrow2()
			+e.slider-wrap
				.swiper-container.sFamiliar-slider-js
					.swiper-wrapper
						-for(var i =0; i < 4; i++)
							+sFamiliarSlide(1)
							+sFamiliarSlide(2)
							+sFamiliarSlide(3)
	// end sFamiliar

mixin sFamiliarSlide(imgNum)
	.swiper-slide
		+b.prod-item
			+e.row.row.align-items-center
				.col-xxl-auto
					+e.img(href="#")
						img(loading="lazy" src=`img/@2x/sFamiliar-${imgNum}.png` alt="")
				.col
					+e.title(href="#") Стиральная машина HAIER HW70-12829A
					//- +e.chars
					//- 	+sFamiliarSlideChar('Артикул:', '770080')
					//- 	+sFamiliarSlideChar('Производитель:', 'Toshiba')
					//- 	+sFamiliarSlideChar('Цвет:', 'золотистый')
					+e.foot-row.row.align-items-center
						.col
							+e.price 69 990 руб.
						.col-auto
							+e.actions
								.row.gx-3.justify-content-end
									+e.btn-wrap
										+e.add-btn(href="#")
											+icon('plus')
											+icon('check')
											+e.add-btn-toggle-text
												span в корзину
												span в корзине
									+longProdAction(2)
									+longProdAction(3)

mixin sFamiliarSlideChar(key,val)
	+e.char
		+e.SPAN.key=key
		+e.SPAN.val=val