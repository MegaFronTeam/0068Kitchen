mixin sForm()
	// start sForm
	+b.SECTION.sForm.section#sForm&attributes(attributes)
		.container
			+e.box
				+e.bg
					img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
				+b.section-title
					h2 Хотите связаться с нами и что-то предложить?
					p Заполните форму обратной связи, напишите ваше мнение. Мы ответим вам на указанную почту
				+form-wrap()
					+e.row.row
						+e.left-col.col-lg-auto
							+input('Ваше имя', 'text')
							+input('Ваша электронная почта', 'email')
						.col-lg
							+input('Ваш комментарий','textarea')
						.col-12.m-0
						+e.left-col.col-lg-auto
							+e.btn(type="submit") написать нам
						.col-lg
							+e.policy
								+e.p-txt
									| Мы безопасно храним данные и никому их не передаём, вот
									|
									a(href="#") условия.
	// end sForm

mixin sFormAlt(data)
	// start sForm
	+b.SECTION.sForm--alt.section#sForm&attributes(attributes)
		.container
			+e.box--alt
				+e.bg
					img(loading="lazy" src="img/@2x/sAbout-bg.png" alt="")
				+b.section-title
					h2=data.title
					p=data.descr
				+form-wrap()
					+e.row--alt.row
						+e.inp-col.col-md-6.col-lg-auto
							+input('Ваше имя', 'text')
						+e.inp-col.col-md-6.col-lg-auto
							+input('Ваш телефон', 'tel')
						.col-lg
							+e.btn(type="submit") написать нам
					+e.policy--mh0
						+e.p-txt
							| Мы безопасно храним данные и никому их не передаём, вот
							|
							a(href="#") условия.